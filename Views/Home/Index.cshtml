@{
    ViewData["Title"] = "Home Page";
}

@model IQueryable<Book>


@*Cycle through books and create a card for each*@
@foreach (var b in Model)
{
    <br />
    <div class="card">
        <div class="card-header">
            <h4>@b.Title</h4>
            <div>
                <div class="badge badge-secondary" style="margin-left:10px;">@b.Classification</div>
                <div class="badge badge-dark" style="margin-left:10px;">@b.Category</div>
                <span class="font-weight-bold" style="float:right">
                    @b.Price.ToString("c")
                </span>
            </div>
        </div>
        <div class="card-body">
            <div class="card-subtitle mb-2">Author: @b.Author</div>
            <div class="card-text">Publisher: @b.Publisher</div>
            <div class="card-text text-muted small">@b.ISBN</div>
        </div>
    </div>
}
